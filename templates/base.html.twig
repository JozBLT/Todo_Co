<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">

        <title>{% block title %}To Do List app{% endblock %}</title>

        <!-- Bootstrap 5 CSS -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

        <!-- Custom CSS (anciennement shop-homepage.css) -->
        {% block importmap %}{{ importmap('app') }}{% endblock %}

        {% block stylesheets %}{% endblock %}
    </head>

    <body>
    <!-- Navbar -->
    <nav class="navbar navbar-light bg-light fixed-top" role="navigation" style="background-color: #e3f2fd;">
        <div class="container">
            <div class="d-flex align-items-center justify-content-between w-100">
                <a class="navbar-brand" href="{{ path('app_home') }}">To Do List app</a>
                <img src="{{ asset('images/Logo_OpenClassrooms.png') }}" alt="OpenClassrooms" height="40">
            </div>
        </div>
    </nav>

    <!-- Page Content -->
    <div class="container" style="margin-top: 100px;">
        <div class="row mb-3">
            <div class="col">
                <a href="{{ path('user_create') }}" class="btn btn-primary">Créer un utilisateur</a>

                {% if app.user %}
                    <a href="{{ path('app_logout') }}" class="btn btn-danger float-end">Se déconnecter</a>
                {% elseif app.request.attributes.get('_route') != 'app_login' %}
                    <a href="{{ path('app_login') }}" class="btn btn-success">Se connecter</a>
                {% endif %}
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                {% for flash_message in app.flashes('success') %}
                    <div class="alert alert-success" role="alert">
                        <strong>Superbe !</strong> {{ flash_message }}
                    </div>
                {% endfor %}

                {% for flash_message in app.flashes('error') %}
                    <div class="alert alert-danger" role="alert">
                        <strong>Oops !</strong> {{ flash_message }}
                    </div>
                {% endfor %}

                {% block header_title %}{% endblock %}
                {% block header_img %}
                    <img class="slide-image" src="{{ asset('images/todolist_homepage.jpg') }}" alt="todo list">
                {% endblock %}
            </div>
        </div>

        <br>

        <div class="row">
            <div class="col-md-12">
                {% block body %}{% endblock %}
            </div>
        </div>
    </div>
    <!-- /.container -->

    <!-- Footer -->
    <div class="container mt-4">
        <hr>
        <footer>
            <div class="row">
                <div class="col-lg-12">
                    <p class="text-end text-muted">Copyright &copy; OpenClassrooms</p>
                </div>
            </div>
        </footer>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    {% block javascripts %}{% endblock %}
    </body>
</html>