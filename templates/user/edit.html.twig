{% extends 'base.html.twig' %}

{% block title %}Modifier {{ user.username }}{% endblock %}
{% block header_img %}{% endblock %}

{% block body %}
    <div class="row justify-content-center mb-4">
        <div class="col-md-8 col-lg-6">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1 class="mb-0">Modifier <strong>{{ user.username }}</strong></h1>
                <a href="{{ path('user_list') }}" class="btn btn-outline-secondary">← Retour à la liste</a>
            </div>
            <div class="card shadow-sm">
                <div class="card-body">
                    {{ form_start(form, {'action': path('user_edit', {'id': user.id})}) }}
                    <div class="row">
                        {% for field in form %}
                            {% if field.vars.name != '_token' %}
                                <div class="mb-3">
                                    <label for="{{ field.vars.id }}" class="form-label mb-1">
                                        {{ field.vars.label|default(field.vars.name)|trans({}, field.vars.translation_domain) }}
                                    </label>
                                    {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(field) }}
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                    <div class="d-grid d-md-flex justify-content-end mt-4">
                        <button type="submit" class="btn btn-success">Modifier</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
