{% extends 'base.html.twig' %}

{% block header_img %}{% endblock %}

{% block header_title %}
    <h1>Liste des tâches</h1>
{% endblock %}

{% block body %}
    <a href="{{ path('task_create') }}" class="btn btn-info mb-3 float-end">Créer une tâche</a>

    {% if tasks is empty %}
        <div class="alert alert-warning" role="alert">
            Il n'y a pas encore de tâche enregistrée.
            <a href="{{ path('task_create') }}" class="btn btn-warning float-end">Créer une tâche</a>
        </div>
    {% else %}
        <div class="row">
            {% for task in tasks %}
                <div class="col-sm-6 col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title d-flex justify-content-between align-items-center">
                                {{ task.title }}
                                {% if task.isDone %}
                                    <span class="badge bg-success">✔</span>
                                {% else %}
                                    <span class="badge bg-secondary">✘</span>
                                {% endif %}
                            </h5>
                            <p class="card-text">{{ task.content }}</p>
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <form action="{{ path('task_toggle', {id: task.id}) }}" method="post" style="display: inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ task.id) }}">
                                <button class="btn btn-outline-success btn-sm">
                                    {% if not task.isDone %}Marquer comme faite{% else %}Marquer non terminée{% endif %}
                                </button>
                            </form>
                            <form action="{{ path('task_delete', {id: task.id}) }}" method="post" style="display: inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
                                <button class="btn btn-outline-danger btn-sm">Supprimer</button>
                            </form>
                            <a href="{{ path('task_edit', {id: task.id}) }}" class="btn btn-outline-primary btn-sm">Modifier</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
