{% extends 'base.html.twig' %}

{% block header_title %}
    <h1>Créer une nouvelle tâche</h1>
{% endblock %}

{% block header_img %}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-8 offset-md-2">
            {{ form_start(form, {'action': path('task_create')}) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-success float-end mt-2">Ajouter</button>
            {{ form_end(form) }}

            <a href="{{ path('task_list') }}" class="btn btn-primary mt-3">Retour à la liste des tâches</a>
        </div>
    </div>
{% endblock %}
