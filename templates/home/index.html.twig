{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block header_title %}
    <h1 class="display-5 text-center mb-4">
        Bienvenue sur <strong>Todo List</strong>, l'application pour gérer vos tâches sans effort !
    </h1>
{% endblock %}

{% block body %}
    <div class="row row-cols-1 row-cols-md-3 g-4 text-center">
        <div class="col">
            <a href="{{ path('task_create') }}" class="btn btn-outline-success w-100">
                <i class="bi bi-plus-circle me-2"></i>
                Nouvelle tâche
            </a>
        </div>
        <div class="col">
            <a href="{{ path('task_list', {'status': 'todo'}) }}" class="btn btn-outline-primary w-100">
                <i class="bi bi-list-task me-2"></i>
                Tâches à faire
            </a>
        </div>
        <div class="col">
            <a href="{{ path('task_list', {'status': 'done'}) }}" class="btn btn-outline-secondary w-100">
                <i class="bi bi-check2-circle me-2"></i>
                Tâches terminées
            </a>
        </div>
    </div>
{% endblock %}
