{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block header_title %}
    <h1>Bienvenue sur Todo List, l'application vous permettant de gérer l'ensemble de vos tâches sans effort !</h1>
{% endblock %}

{% block body %}
    <div class="row g-3">
        <div class="col-md-auto">
            <a href="{{ path('task_create') }}" class="btn btn-success w-100">Créer une nouvelle tâche</a>
        </div>
        <div class="col-md-auto">
            <a href="{{ path('task_list', {'status': 'todo'}) }}"
               class="btn btn-info w-100">Consulter la liste des tâches à faire</a>
        </div>
        <div class="col-md-auto">
            <a href="{{ path('task_list', {'status': 'done'}) }}"
               class="btn btn-secondary w-100">Consulter la liste des tâches terminées</a>
        </div>
    </div>
{% endblock %}
